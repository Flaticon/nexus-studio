{
  "name": "nexus-studio",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:api": "cd apps/api && pnpm run start:dev",
    "dev:web": "cd apps/web && pnpm run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:up": "docker-compose up -d mongodb redis",
    "db:down": "docker-compose down",
    "db:reset": "docker-compose down -v && docker-compose up -d mongodb redis",
    "setup": "pnpm install && pnpm run db:up"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "prettier": "^3.1.0",
    "turbo": "latest",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.11.1+sha512.e519b9f7639869dc8d5c3c5dfef73b3f091094b0a006d7317353c72b124e80e1afd429732e28705ad6bfa1ee879c1fce46c128ccebd3192101f43dd67c667912"
}
